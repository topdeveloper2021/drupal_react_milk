{{ attach_library('milken_base/eck_entity_event') }}

{% set eck_entity_value =  []
  | merge({ 'entityTypeId': eck_entity.getEntityTypeId })
  | merge({ 'id': eck_entity.uuid.value })
  | merge({ 'drupal_internal__id': eck_entity.id })
  | merge({ 'type': eck_entity.bundle })
  | merge({ 'includes': "field_hero_image,field_hero_image.field_media_image" })

%}


<eck-entity-event
  {{ attributes }}
  {{ content_attributes }}
  data-view-mode="card"
  data-entity="{{ eck_entity_value | jsonapi }}"
>

</eck-entity-event>
